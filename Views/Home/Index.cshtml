@{
    ViewData["Title"] = "Home Page";
}

@model Survey
<div class="text-center">
    <form class="w-75 d-block border container p-5 mt-5 shadow" action="results" method="post">
        <div class="row justify-content-end">
            <div class="row justify-content-between p-3 ">
                <label class="col-5" asp-for="Name">Your Name:</label>
                <input class="col-4" asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="row justify-content-between p-3">
                <label class="col-5" asp-for="Location">Dojo Location:</label>
                @* <input class="col-4" type="text" id="Location" name="Location"> *@
                <select class="col-4 p-2" asp-for="Location">
                    <option value=""></option>
                    <option value="Santiago">Santiago</option>
                    <option value="Dallas">Dallas</option>
                    <option value="Florida">Florida</option>
                    <option value="NewYork">New York</option>
                </select>
                <span asp-validation-for="Location"></span>
            </div>
            <div class="row justify-content-between p-3">
                <label class="col-5" asp-for="Language">Favorite Language:</label>
                @* <input class="col-4" type="text" id="Language" name="Language"> *@
                <select class="col-4 p-2" asp-for="Language">
                    <option value=""></option>
                    <option value="C#">C#</option>
                    <option value="Javascript">JavaScript</option>
                    <option value="Nodejs">NodeJS</option>
                    <option value="Python">Python</option>
                </select>
                <span asp-validation-for="Language"></span>
            </div>
            <div class="row justify-content-between p-3">
                <label class="row mb-3" asp-for="Comment">Comment (optional):</label>
                <textarea asp-for="Comment" cols="30" rows="5"></textarea>
                <span asp-validation-for="Comment"></span>
            </div>
            <input class="btn btn-primary d-flex w-25 shadow border-dark" type="submit" value="Submit">
        </div>
    </form>
</div>
